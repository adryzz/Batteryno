<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>


    <PropertyGroup Label="Nuget">
        <PackageId>Batteryno</PackageId>
        <Version>2.0.0</Version>
        <Authors>Adryzz</Authors>
        <PackageTags>Battery;Power;</PackageTags>
        <Title>Batteryno</Title>
        <Description>Simple linux power monitoring library</Description>
        <Copyright>2021 Adryzz</Copyright>
        <PackageProjectUrl>https://github.com/adryzz/Batteryno</PackageProjectUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup Label="Documents">
        <None Include="..\Readme.md" Pack="true" PackagePath="" />
        <None Include="..\LICENSE" Pack="true" PackagePath="" />
    </ItemGroup>

</Project>
